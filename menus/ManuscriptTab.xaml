<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fluent="urn:fluent-ribbon">

    <fluent:RibbonTabItem x:Key="ManuscriptRibbon" Header="Manuscript" IsSelected="True">
        <fluent:RibbonGroupBox Header="Edit">
            <fluent:Button Header="Cut"/>
            <fluent:Button Header="Copy"/>
            <fluent:Button Header="Paste"/>
            <fluent:Button Header="Undo"/>
            <fluent:Button Header="Redo"/>
        </fluent:RibbonGroupBox>

        <fluent:RibbonGroupBox Header="Right Pane">
            <fluent:Button Header="Outline"/>
            <fluent:Button Header="Timeline"/>
            <fluent:Button Header="Characters"/>
            <fluent:Button Header="Locations"/>
            <fluent:Button Header="Elements"/>
        </fluent:RibbonGroupBox>

        <fluent:RibbonGroupBox Header="Word Count">
            <StackPanel>
                <TextBlock FontSize="12">Scene: 1,000</TextBlock>
                <TextBlock FontSize="12">Chapter: 10,000</TextBlock>
                <TextBlock FontSize="12">Book: 100,000</TextBlock>
            </StackPanel>
        </fluent:RibbonGroupBox>
    </fluent:RibbonTabItem>
</ResourceDictionary>
